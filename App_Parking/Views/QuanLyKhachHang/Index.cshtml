<!-- Modal -->
<div class="modal fade active bs-example-modal-xs" id="modalKhachHang" role="dialog">
    <div class="modal-dialog modal-xs" style="width:850px !important">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 id="title">Thêm khách hàng</h5>
            </div>
            <div class="modal-body padding">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Tên khách hàng</div>
                            <div class="col-sm-9 padding-top">
                                <input class="form-control widthfull" type="text" id="txtTenKhachHang" placeholder="Vui lòng nhập tên khách hàng" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Mã khách hàng</div>
                            <div class="col-sm-9 padding-top">
                                <input class="form-control widthfull" type="text" id="txtMaKhachHang" placeholder="Vui lòng nhập mã khách hàng" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Số điện thoại</div>
                            <div class="col-sm-9 padding-top">
                                <input class="form-control widthfull" type="text" id="txtSoDienThoai" placeholder="Vui lòng nhập số điện thoại" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Số CMND</div>
                            <div class="col-sm-9 padding-top">
                                <input class="form-control widthfull" type="text" id="txtSoCMND" placeholder="Vui lòng nhập số CMND" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Ngày sinh</div>
                            <div class="col-sm-4 padding-top">
                                <div class='input-group date datetimepicker'>
                                    <input type='text' class="form-control" id="txtNgaySinh" placeholder="Tới ngày" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-2 label-dungchung">Giới tính:</div>
                            <div class="col-sm-3 padding-top" style="padding-left: 0px">
                                <select class="form-control" style="padding-left: 0px" id="slGioiTinh">
                                    <option value="0">Chọn giới tính</option>
                                    <option value="M">Nam</option>
                                    <option value="F">Nữ</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Địa chỉ</div>
                            <div class="col-sm-9 padding-top">
                                <textarea class="form-control widthfull" id="txtDiachi" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Email</div>
                            <div class="col-sm-9 padding-top">
                                <input class="form-control widthfull" type="text" id="txtEmail" placeholder="Vui lòng nhập email" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 label-dungchung">Ghi chú</div>
                            <div class="col-sm-9 padding-top">
                                <textarea class="form-control widthfull" id="txtMoTa" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 label-dungchung"></div>
                            <div class="col-sm-9 padding-top">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" style="margin-top: 12px;" type="checkbox" id="ckbHieuLuc" value="option" checked>
                                    <label class="form-check-label" for="ckbHieuLuc">Hiệu lực</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row padding-top">
                            <img src="https://www.triaorkestrasi.com/resources/images/person.png" height="256" width="256" class="text-center img-thumbnail" id="imgKhachHang" />
                        </div>
                        <div class="row text-center padding-top">
                            <button class="btn btn-primary" id="btnThemAnh">Chọn ảnh</button>
                            <button class="btn btn-warning" id="btnXoaAnh">Xóa ảnh</button>
                        </div>
                    </div>
                </div>

                <div class="row chucNang text-center">
                    <div class="row inline">
                        <div class="btn btn-success" id="btnAdd">
                            <i class="fa fa-plus"></i> Lưu
                        </div>
                        <div class="btn btn-danger" data-dismiss="modal">
                            <i class="glyphicon glyphicon-remove"></i> Hủy
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

