    <div class="col-sm-12">
        <table id="tblKhachHang" class="display table table-bordered table-responsive dt-responsive datatable widthfull" cellspacing="0">
            <thead>
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Mã khách hàng</th>
