@model App_Parking.Models.LoginModel
@{
    ViewBag.Title = "Login1";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@using (Html.BeginForm("Login", "Login"))

{
<div class="login-box">
    <!-- /.login-logo -->
    <div class="login-box-body">
        <div class="login-logo">
            <a href="#"><b>Đăng nhập</b></a>
        </div>
        <form action="#" method="post" id="loginForm">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserName, new { @id = "UserName", @name = "UserName", @class = "form-control", @placeholder = "Tên đăng nhập" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @id = "Password", @name = "Password", @class = "form-control", @placeholder = "Mật khẩu" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            @Html.CheckBoxFor(model => model.RememberMe) Nhớ mật khẩu
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" id="btnLogin" onclick="Js_Login.Login();" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
}
<script src="~/Scripts/Js-Business/Login.js"></script>
